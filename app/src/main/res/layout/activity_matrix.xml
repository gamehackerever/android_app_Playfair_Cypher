<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".Matrix">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/finalWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_textview"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="40sp" />

    <TextView
        android:layout_marginTop="15sp"
        app:layout_constraintTop_toBottomOf="@id/finalWord"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/cypher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finalWord"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_textview"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="40sp" />

    <TableLayout
        app:layout_constraintTop_toBottomOf="@id/cypher"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:layout_below="@id/cypher"
        android:layout_centerHorizontal="true"
        android:padding="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/a"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/b"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
